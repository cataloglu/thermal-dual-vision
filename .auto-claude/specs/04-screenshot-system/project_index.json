{
  "project_type": "single",
  "name": "smart-motion-detector",
  "language": "python",
  "framework": "home-assistant-addon",
  "root_path": "/home/ac/Documents/motion-detector/motion-detector",
  "services": {
    "backend": {
      "path": ".",
      "tech_stack": ["python", "opencv", "asyncio", "numpy"],
      "port": 8099,
      "dev_command": "python src/main.py",
      "test_command": "python -m pytest tests/ -v"
    }
  },
  "infrastructure": {
    "docker": true,
    "database": null,
    "message_queue": "mqtt"
  },
  "conventions": {
    "linter": null,
    "formatter": null,
    "testing": "pytest",
    "code_style": {
      "type_hints": true,
      "docstrings": "google_style",
      "dataclasses": "preferred for config and data structures",
      "async": "asyncio for I/O operations",
      "logging": "use get_logger() from logger.py"
    }
  },
  "dependencies": {
    "opencv-python-headless": ">=4.8.0",
    "numpy": ">=1.24.0",
    "ultralytics": ">=8.0.0",
    "openai": ">=1.0.0",
    "paho-mqtt": ">=2.0.0",
    "python-telegram-bot": ">=20.0",
    "aiohttp": ">=3.9.0",
    "Pillow": ">=10.0.0"
  }
}
