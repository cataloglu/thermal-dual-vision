# Smart Motion Detector - Environment Variables Example
# Copy this file to .env and fill in your values

# =============================================================================
# Mode Configuration
# =============================================================================

# Home Assistant integration mode (true/false)
# When true, uses MQTT discovery and HA-compatible topics
# When false, runs in standalone mode with local configuration
HA_MODE=true

# =============================================================================
# Camera Configuration
# =============================================================================

# Camera URL (required)
# Examples:
#   RTSP: rtsp://username:password@192.168.1.100:554/stream
#   HTTP: http://192.168.1.100:8080/video
CAMERA_URL=

# Camera frame rate (frames per second)
CAMERA_FPS=5

# =============================================================================
# Motion Detection Configuration
# =============================================================================

# Motion detection sensitivity (1-10, higher = more sensitive)
MOTION_SENSITIVITY=7

# Minimum area in pixels to trigger motion detection
MOTION_MIN_AREA=500

# Cooldown period in seconds between motion events
MOTION_COOLDOWN=5

# =============================================================================
# YOLO Object Detection Configuration
# =============================================================================

# YOLO model to use (yolov8n, yolov8s, yolov8m, yolov8l, yolov8x)
# n=nano (fastest), s=small, m=medium, l=large, x=extra large (most accurate)
YOLO_MODEL=yolov8n

# Confidence threshold for object detection (0.0-1.0)
YOLO_CONFIDENCE=0.5

# =============================================================================
# LLM Configuration
# =============================================================================

# OpenAI API key (required)
OPENAI_API_KEY=

# =============================================================================
# Screenshot Configuration
# =============================================================================

# Seconds to capture before motion event
SCREENSHOT_BEFORE=3

# Seconds to capture after motion event
SCREENSHOT_AFTER=3

# =============================================================================
# MQTT Configuration (for Home Assistant mode)
# =============================================================================

# MQTT broker hostname
# Use "core-mosquitto" for Home Assistant add-on
# Use IP address or hostname for standalone mode
MQTT_HOST=core-mosquitto

# MQTT broker port
MQTT_PORT=1883

# MQTT username (if authentication is enabled)
MQTT_USER=

# MQTT password (if authentication is enabled)
MQTT_PASSWORD=

# MQTT topic prefix for all published messages
MQTT_TOPIC_PREFIX=smart_motion

# Enable MQTT discovery for Home Assistant (true/false)
MQTT_DISCOVERY=true

# =============================================================================
# Telegram Notifications (Optional)
# =============================================================================

# Enable Telegram notifications (true/false)
TELEGRAM_ENABLED=false

# Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=

# Telegram chat ID(s) - comma-separated for multiple recipients
# Get your chat ID from @userinfobot
TELEGRAM_CHAT_ID=

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
