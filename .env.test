# Test environment configuration for manual verification
# These are minimal settings required for the application to start

# Camera configuration (required)
CAMERA_URL=http://localhost:8080/stream

# OpenAI API key (required - using placeholder for test)
OPENAI_API_KEY=sk-test-placeholder-key

# Motion detection settings
MOTION_SENSITIVITY=7
MOTION_MIN_AREA=500
MOTION_COOLDOWN=5

# YOLO settings
YOLO_MODEL=yolov8n
YOLO_CONFIDENCE=0.5

# Screenshot settings
SCREENSHOT_BEFORE=3
SCREENSHOT_AFTER=3

# MQTT settings (will attempt connection but gracefully handle failure)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USER=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=smart_motion
MQTT_DISCOVERY=true

# Telegram settings (disabled for test)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=INFO
